---
import Container from './Container.astro'
import FirstImage from './images/FirstImage.astro'
import SecondImage from './images/SecondImage.astro'
import ThirdImage from './images/ThirdImage.astro'
import ForthImage from './images/FourthImage.astro'
import FifthImage from './images/FifthImage.astro'
import SixthImage from './images/SixthImage.astro'
import EleventhImage from './images/EleventhImage.astro'
import TwelfthImage from './images/TwelfthImage.astro'
import ThirteenthImage from './images/ThirteenthImage.astro'
import FourteenthImage from './images/FourteenthImage.astro'
---

<Container>
  <svg
    xmlns='http://www.w3.org/2000/svg'
    viewBox='0 0 24 24'
    fill='currentColor'
    class='size-12 md:size-16 text-secondary-500 dark:text-primary-200'
  >
    <path
      fill-rule='evenodd'
      d='M9 4.5a.75.75 0 01.721.544l.813 2.846a3.75 3.75 0 002.576 2.576l2.846.813a.75.75 0 010 1.442l-2.846.813a3.75 3.75 0 00-2.576 2.576l-.813 2.846a.75.75 0 01-1.442 0l-.813-2.846a3.75 3.75 0 00-2.576-2.576l-2.846-.813a.75.75 0 010-1.442l2.846-.813A3.75 3.75 0 007.466 7.89l.813-2.846A.75.75 0 019 4.5zM18 1.5a.75.75 0 01.728.568l.258 1.036c.236.94.97 1.674 1.91 1.91l1.036.258a.75.75 0 010 1.456l-1.036.258c-.94.236-1.674.97-1.91 1.91l-.258 1.036a.75.75 0 01-1.456 0l-.258-1.036a2.625 2.625 0 00-1.91-1.91l-1.036-.258a.75.75 0 010-1.456l1.036-.258a2.625 2.625 0 001.91-1.91l.258-1.036A.75.75 0 0118 1.5zM16.5 15a.75.75 0 01.712.513l.394 1.183c.15.447.5.799.948.948l1.183.395a.75.75 0 010 1.422l-1.183.395c-.447.15-.799.5-.948.948l-.395 1.183a.75.75 0 01-1.422 0l-.395-1.183a1.5 1.5 0 00-.948-.948l-1.183-.395a.75.75 0 010-1.422l1.183-.395c.447-.15.799-.5.948-.948l.395-1.183A.75.75 0 0116.5 15z'
      clip-rule='evenodd'></path>
  </svg>

  <section class='flex flex-col gap-8' id='galeria'>
    <h2
      class='my-8 xl:my-12 text-4xl font-bold text-primary-700 dark:text-secondary-300 sm:text-5xl xl:text-6xl'
    >
      Nuestra Galer√≠a
    </h2>

    <div class='embla w-full sm:w-5/6 sm:m-auto'>
      <div class='embla__viewport overflow-hidden'>
        <div class='embla__container flex items-start touch-pan-y'>
          <div
            class='embla__slide min-w-0 flex-grow-0 flex-shrink-0 basis-full'
          >
            <div
              class='embla__slide__number rounded-full text-6xl flex items-center justify-center h-auto lg:h-[44rem]'
            >
              <FirstImage />
            </div>
          </div>
          <div
            class='embla__slide min-w-0 flex-grow-0 flex-shrink-0 basis-full'
          >
            <div
              class='embla__slide__number rounded-full text-6xl flex items-center justify-center h-auto lg:h-[44rem]'
            >
              <SecondImage />
            </div>
          </div>
          <div
            class='embla__slide min-w-0 flex-grow-0 flex-shrink-0 basis-full'
          >
            <div
              class='embla__slide__number rounded-full text-6xl flex items-center justify-center h-auto lg:h-[44rem]'
            >
              <ThirdImage />
            </div>
          </div>
          <div
            class='embla__slide min-w-full flex-grow-0 flex-shrink-0 basis-full'
          >
            <div
              class='embla__slide__number rounded-full text-6xl flex items-center justify-center h-auto lg:h-[44rem]'
            >
              <ForthImage />
            </div>
          </div>
          <div
            class='embla__slide min-w-0 flex-grow-0 flex-shrink-0 basis-full'
          >
            <div
              class='embla__slide__number rounded-full text-6xl flex items-center justify-center h-auto lg:h-[44rem]'
            >
              <FifthImage />
            </div>
          </div>
          <div
            class='embla__slide min-w-0 flex-grow-0 flex-shrink-0 basis-full'
          >
            <div
              class='embla__slide__number rounded-full text-6xl flex items-center justify-center h-auto lg:h-[44rem]'
            >
              <SixthImage />
            </div>
          </div>
          <div
            class='embla__slide min-w-0 flex-grow-0 flex-shrink-0 basis-full'
          >
            <div
              class='embla__slide__number rounded-full text-6xl flex items-center justify-center h-auto lg:h-[44rem]'
            >
              <EleventhImage />
            </div>
          </div>
          <div
            class='embla__slide min-w-0 flex-grow-0 flex-shrink-0 basis-full'
          >
            <div
              class='embla__slide__number rounded-full text-6xl flex items-center justify-center h-auto lg:h-[44rem]'
            >
              <TwelfthImage />
            </div>
          </div>
          <div
            class='embla__slide min-w-0 flex-grow-0 flex-shrink-0 basis-full'
          >
            <div
              class='embla__slide__number rounded-full text-6xl flex items-center justify-center h-auto lg:h-[44rem]'
            >
              <ThirteenthImage />
            </div>
          </div>
          <div
            class='embla__slide min-w-0 flex-grow-0 flex-shrink-0 basis-full'
          >
            <div
              class='embla__slide__number rounded-full text-6xl flex items-center justify-center h-auto lg:h-[44rem]'
            >
              <FourteenthImage />
            </div>
          </div>
        </div>
      </div>

      <div class='embla__controls grid justify-between mt-8'>
        <div
          class='embla__buttons invisible md:visible grid grid-cols-2 gap-3 items-center'
        >
          <button
            class='embla__button embla__button--prev appearance-none bg-transparent touch-manipulation cursor-pointer border-0 p-0 m-0 size-12 md:size-16 z-10 rounded-full flex items-center justify-center shadow-[1px_1px_10px_0_rgba(182,121,78,0.9)] dark:shadow-[1px_1px_10px_0_rgba(165,216,233,0.3)]'
            type='button'
          >
            <svg
              class='embla__button__svg size-4 sm:size-6 text-primary-800 dark:text-secondary-300'
              viewBox='0 0 532 532'
            >
              <path
                fill='currentColor'
                d='M355.66 11.354c13.793-13.805 36.208-13.805 50.001 0 13.785 13.804 13.785 36.238 0 50.034L201.22 266l204.442 204.61c13.785 13.805 13.785 36.239 0 50.044-13.793 13.796-36.208 13.796-50.002 0a5994246.277 5994246.277 0 0 0-229.332-229.454 35.065 35.065 0 0 1-10.326-25.126c0-9.2 3.393-18.26 10.326-25.2C172.192 194.973 332.731 34.31 355.66 11.354Z'
              ></path>
            </svg>
          </button>

          <button
            class='embla__button embla__button--next appearance-none bg-transparent touch-manipulation cursor-pointer border-0 p-0 m-0 size-12 md:size-16 z-10 rounded-full flex items-center justify-center shadow-[1px_1px_10px_0_rgba(182,121,78,0.9)] dark:shadow-[1px_1px_10px_0_rgba(165,216,233,0.3)]'
            type='button'
          >
            <svg
              class='embla__button__svg size-4 sm:size-6 text-primary-800 dark:text-secondary-300'
              viewBox='0 0 532 532'
            >
              <path
                fill='currentColor'
                d='M176.34 520.646c-13.793 13.805-36.208 13.805-50.001 0-13.785-13.804-13.785-36.238 0-50.034L330.78 266 126.34 61.391c-13.785-13.805-13.785-36.239 0-50.044 13.793-13.796 36.208-13.796 50.002 0 22.928 22.947 206.395 206.507 229.332 229.454a35.065 35.065 0 0 1 10.326 25.126c0 9.2-3.393 18.26-10.326 25.2-45.865 45.901-206.404 206.564-229.332 229.52Z'
              ></path>
            </svg>
          </button>
        </div>

        <div
          class='embla__selected-snap-display justify-self-end self-center text-primary-800/70 dark:text-secondary-300/70 font-bold'
        >
          -
        </div>
      </div>
    </div>
  </section>
</Container>

<style>
  .embla__container {
    backface-visibility: hidden;
    margin-left: calc(2rem * -1);
  }

  .embla__controls {
    grid-template-columns: auto 1fr;
  }

  /* .embla__button {
    box-shadow: inset 1px 1px 10px 0px rgba(255, 16, 233);
  } */
</style>

<script src='../carousel.js'></script>
